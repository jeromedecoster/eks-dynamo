FROM node:18.4-slim
# https://stackoverflow.com/a/52430444
ARG NODE_ENV
ENV NODE_ENV $NODE_ENV
ARG VERSION
ENV VERSION $VERSION
ARG WEBSITE_PORT
ENV WEBSITE_PORT $WEBSITE_PORT
ARG DYNAMO_TABLE
ENV DYNAMO_TABLE $DYNAMO_TABLE
ARG DYNAMO_REGION
ENV DYNAMO_REGION $DYNAMO_REGION
WORKDIR /app
ADD . .
RUN npm install
CMD ["node", "index.js"]